@model GarageBuddy.Web.ViewModels.Billing.InvoiceViewModel

@{
    ViewData["Title"] = "Invoice Details";
}

<h1>Invoice Details</h1>

<div>
    <h4>Invoice</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Job ID
        </dt>
        <dd class="col-sm-10">
            @Model.JobId
        </dd>
        <dt class="col-sm-2">
            Total Price
        </dt>
        <dd class="col-sm-10">
            @Model.TotalPrice
        </dd>
        <dt class="col-sm-2">
            Total Paid
        </dt>
        <dd class="col-sm-10">
            @Model.TotalPaid
        </dd>
        <dt class="col-sm-2">
            Is Paid
        </dt>
        <dd class="col-sm-10">
            @Model.IsPaid
        </dd>
    </dl>
</div>

<h2>Items</h2>
<table class="table">
    <thead>
        <tr>
            <th>Description</th>
            <th>Quantity</th>
            <th>Unit Price</th>
            <th>Total Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>@item.Description</td>
                <td>@item.Quantity</td>
                <td>@item.UnitPrice</td>
                <td>@item.TotalPrice</td>
            </tr>
        }
    </tbody>
</table>
